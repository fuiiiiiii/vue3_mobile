{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true, //这样可以对`this`上的数据属性进行严格的推断，否则总是被视为any类型
        "jsx": "preserve",
        "moduleResolution": "node",
        "baseUrl": "./",
        "types": ["node"],
        "paths": {
            "@/*":["./src/*"],
            "@components/*":["./src/components/*"]
        },
        
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts",
      ],
      "exclude": [
        "node_modules"
      ]
    //   "include": [
    //       "src/**/*", "src/a.d.ts" //**/递归匹配任意子目录
    //   ],
    //   "exclude": [
    //       "node_modules"
    //   ]
}